	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch sandbox (Windows)",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceRoot}/bin/sandbox.exe",
			"console": "integratedTerminal",
			"symbolOptions": {
				"searchPaths": [ "${workspaceFolder}/src/nlr-core/" ],
				"searchMicrosoftSymbolServer": false
			},
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "CMake: build"
			// "visualizerFile": "${workspaceFolder}/my.natvis"
		}
	]
}